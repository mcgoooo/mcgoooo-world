{
  "name": "with-tailwind",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "deploy": "turbo run deploy --output-logs=full",
    "deploy:version": "turbo run deploy:version --output-logs=full",
    "deploy:staging": "turbo run deploy:staging --output-logs=full",
    "lint": "turbo run lint",
    "check-types": "turbo run check-types",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "dev-ops:initial-setup": "node dev-ops/setup/initialSetup.mjs"
  },
  "devDependencies": {
    "chalk": "^5.6.0",
    "commander": "^14.0.0",
    "inquirer": "^12.9.3",
    "prettier": "^3.6.0",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "turbo": "^2.5.6",
    "jsonc-parser": "^3.3.1"

  },
  "engines": {
    "node": ">=18"
  },
  "packageManager": "npm@10.9.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ]}
